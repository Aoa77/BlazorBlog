@*
    <EmbeddedMedia />
*@
@inherits EmbeddedMediaBase

<embedded-media class="@CssClass">

    <a target="_image"
       href="@MediaSource"
       style="@LinkStyle">

        <img src="@MediaSource"
             width="@DisplayWidth"
             height="@DisplayHeight"
             data-json="@this.ToJson()" />
    </a>

    <video width="@DisplayWidth"
           height="@DisplayHeight"
           data-json="@this.ToJson()"
           controls>

        <source src="@MediaSource" type="video/mp4" />
        Your browser does not support the video tag.
    </video>
</embedded-media>

