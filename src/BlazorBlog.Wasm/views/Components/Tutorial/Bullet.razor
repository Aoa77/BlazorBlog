@*
    <Bullet /> is a component that wraps a bullet point and its content.
*@
@inherits ParentComponent

<bullet-container class="@CssClass">
    <bullet-wrap>
        <bullet-point />
    </bullet-wrap>

    <bullet-content>
        @ChildContent
    </bullet-content>

</bullet-container>

@code {
    [Parameter]
    public string? CssClass { get; set; }
}
